{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "weekly_intel_v1.json",
    "title": "Sheratan Weekly Intel v1",
    "type": "object",
    "required": [
        "issue",
        "entries",
        "stats"
    ],
    "additionalProperties": false,
    "properties": {
        "issue": {
            "type": "object",
            "required": [
                "week",
                "year",
                "generated_at",
                "schema_version",
                "source_inputs"
            ],
            "additionalProperties": false,
            "properties": {
                "week": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 53
                },
                "year": {
                    "type": "integer",
                    "minimum": 2000,
                    "maximum": 2100
                },
                "generated_at": {
                    "type": "string",
                    "minLength": 8
                },
                "schema_version": {
                    "type": "string",
                    "const": "weekly_intel_v1"
                },
                "source_inputs": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                }
            }
        },
        "highlights": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "entries": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "summary",
                    "why_relevant",
                    "relevance",
                    "confidence",
                    "tags"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 4
                    },
                    "title": {
                        "type": "string",
                        "minLength": 3
                    },
                    "summary": {
                        "type": "string",
                        "minLength": 10
                    },
                    "why_relevant": {
                        "type": "string",
                        "minLength": 10
                    },
                    "relevance": {
                        "type": "string",
                        "enum": [
                            "HIGH",
                            "MEDIUM",
                            "LOW"
                        ]
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0
                    },
                    "domains": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "signals": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "governance": {
                                "type": "boolean"
                            },
                            "ledger": {
                                "type": "boolean"
                            },
                            "routing": {
                                "type": "boolean"
                            },
                            "agents": {
                                "type": "boolean"
                            },
                            "memory": {
                                "type": "boolean"
                            },
                            "trading": {
                                "type": "boolean"
                            },
                            "rl": {
                                "type": "boolean"
                            },
                            "security": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        "stats": {
            "type": "object",
            "required": [
                "count_total",
                "count_high",
                "count_medium",
                "count_low"
            ],
            "additionalProperties": false,
            "properties": {
                "count_total": {
                    "type": "integer",
                    "minimum": 0
                },
                "count_high": {
                    "type": "integer",
                    "minimum": 0
                },
                "count_medium": {
                    "type": "integer",
                    "minimum": 0
                },
                "count_low": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    }
}